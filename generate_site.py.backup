def main():
    saves_dir = os.path.join(os.path.dirname(__file__), 'arsashots-saves-main', 'arsashot-saves')
    output_dir = os.path.join(os.path.dirname(__file__), 'docs')
    
    if not os.path.exists(saves_dir):
        print(f"Error: Saves directory not found at {saves_dir}")
        return
    
    print(f"Scanning saves directory: {saves_dir}")
    games = scan_saves_directory(saves_dir)
    print(f"Found {len(games)} games")
    
    # Create docs directory if it doesn't exist
    os.makedirs(output_dir, exist_ok=True)
    
    # Generate HTML
    html = generate_html(games)
    
    # Write HTML file
    output_file = os.path.join(output_dir, 'index.html')
    with open(output_file, 'w', encoding='utf-8') as f:
        f.write(html)
    
    print(f"‚úì Website generated: {output_file}")
    print(f"‚úì Ready to deploy to GitHub Pages!")

if __name__ == '__main__':
    main()
